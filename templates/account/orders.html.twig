{% extends 'layout/base.html.twig' %}

{% block title %}Chick Chick Shop - Orders{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            {% include 'account/_parts/_menu.html.twig'  %}
            <main class="col-md-911 ms-sm-auto col-lg-11 px-md-4">
                <h2 class="mb-4">Orders</h2>

                <div class="row">
                    {% if orders is not empty %}
                        {% for order in orders %}
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Order #{{ order.id }}</h5>
                                        <p class="card-text"><strong>Date Added:</strong> {{ order.dateAdded|date('Y-m-d') }}</p>
                                        <p class="card-text"><strong>Order Status:</strong> {{ order.orderStatus.name }}</p>
                                        <p class="card-text"><strong>Product Sum:</strong> {{ order.productSum }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="col-md-12">
                            <div class="alert alert-info" role="alert">
                                No orders found.
                            </div>
                        </div>
                    {% endif %}
                </div>

            </main>
        </div>
    </div>
{% endblock %}