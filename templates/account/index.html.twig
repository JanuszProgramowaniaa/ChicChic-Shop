{% extends 'layout/base.html.twig' %}
{% block title %}Chick Chick Shop - Account{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="row">
           <nav id="sidebar" class="col-md-1 col-lg-1 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_account_index' %}active{% endif %}" href="{{ path('app_account_index') }}">
                                <i class="bi bi-person"></i>
                                <span class="nav-text">Account</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_orders' %}active{% endif %}" href="#">
                                <i class="bi bi-cart"></i>
                                <span class="nav-text">Orders</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-911 ms-sm-auto col-lg-11 px-md-4">
                <div class="card mb-4">
                    <h5 class="card-header">Account Details - <b>{{ app.user.email }}</b></h5>
                    <hr class="my-0">
                    <div class="card-body" data-select2-id="13">
                        {{ form_start(address_form, {'attr': {'class': 'fv-plugins-bootstrap5 fv-plugins-framework'}}) }}
                        <div class="row" data-select2-id="12">
                            <div class="mb-3 col-md-6">
                                {{ form_label(address_form.firstName, null, {'class': 'form-label'}) }}
                                {{ form_widget(address_form.firstName, {'attr': {'class': 'form-control'}}) }}
                                <small style="color:red;">{{ form_errors(address_form.firstName) }}</small>
                            </div>
                            <div class="mb-3 col-md-6">
                                {{ form_label(address_form.lastName, null, {'class': 'form-label'}) }}
                                {{ form_widget(address_form.lastName, {'attr': {'class': 'form-control'}}) }}
                                <small style="color:red;">{{ form_errors(address_form.lastName) }}</small>
                            </div>
                            <div class="mb-3 col-md-6">
                                {{ form_label(address_form.company, null, {'class': 'form-label'}) }}
                                {{ form_widget(address_form.company, {'attr': {'class': 'form-control'}}) }}
                                <small style="color:red;"> {{ form_errors(address_form.company) }}</small>
                            </div>
                            <div class="mb-3 col-md-6">
                                {{ form_label(address_form.phone, null, {'class': 'form-label'}) }}
                                {{ form_widget(address_form.phone, {'attr': {'class': 'form-control'}}) }}
                                <small style="color:red;">{{ form_errors(address_form.phone) }}</small>
                            </div>
                            <div class="mb-3 col-md-6">
                                {{ form_label(address_form.address, null, {'class': 'form-label'}) }}
                                {{ form_widget(address_form.address, {'attr': {'class': 'form-control'}}) }}
                                <small style="color:red;">{{ form_errors(address_form.address) }}</small>
                            </div>
                            <div class="mb-3 col-md-6">
                                {{ form_label(address_form.zip, null, {'class': 'form-label'}) }}
                                {{ form_widget(address_form.zip, {'attr': {'class': 'form-control'}}) }}
                                <small style="color:red;">{{ form_errors(address_form.zip) }}</small>
                            </div>
                        </div>
                        <div class="mt-2 d-flex justify-content-end">
                            {{ form_row(address_form.submit, {'label': 'Save changes', 'attr': {'class': 'btn btn-primary me-2'}}) }}
                        </div>
                        {{ form_end(address_form) }}
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}