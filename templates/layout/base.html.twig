<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ChicChic Shop{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="icon" href="{{ asset('favicon.png') }}" type="image/x-icon">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% include 'layout/_parts/_nav.html.twig' %}
            {% include 'layout/_parts/_alert.html.twig' %}
            {% set breadcrumbs = knp_menu_get('main', [], {'matching': 'exact', 'renderRoot': false}) %}
            {{ knp_menu_render(breadcrumbs) }}
            <div class="container mt-4  vh-100">
                {% block content %}

                {% endblock %}
            </div>
            {% include 'layout/_parts/_footer.html.twig' %}
            <script src="js/products/layout/_parts/_alert.js"></script>
            
        {% endblock %}
    </body>
</html>


