<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ChicChic Shop{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="icon" href="{{ asset('favicon.png') }}" type="image/x-icon">
            {{ encore_entry_link_tags('app') }}

            {% if app.request.attributes.get('_route') == 'app_account_index' or app.request.attributes.get('_route') == 'app_account_orders' %}
                {{ encore_entry_link_tags('account') }}
            {% elseif  app.request.attributes.get('_route') == 'app_about_index'  %}
                {{ encore_entry_link_tags('about') }}
            {% elseif  app.request.attributes.get('_route') == 'app_index'  %}
                {{ encore_entry_link_tags('index') }}
            {% elseif  app.request.attributes.get('_route') == 'app_shopping_cart_summary'  %}
                {{ encore_entry_link_tags('summary') }}
            {% endif %}
            
        {% endblock %}
    
    </head>
    <body style= 'overflow-x: hidden;'>
        {% block body %}
            {% include 'layout/_parts/_nav.html.twig' %}
            {% include 'layout/_parts/_alert.html.twig' %}
            {% include 'layout/_parts/_breadcrumb.html.twig' %}
            <div class="container-fluid mt-4" style = "padding-left: 50px; padding-right: 50px;">
                {% block content %}

                {% endblock %}
            </div>
           
            {% include 'layout/_parts/_footer.html.twig' %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
        
        {% include 'layout/_parts/_scrollButton.html.twig' %}

        {% block javascripts %}
            <script src="{{ asset('javascript/layout/_parts/_alert.js') }}" defer> </script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </body>
</html>


