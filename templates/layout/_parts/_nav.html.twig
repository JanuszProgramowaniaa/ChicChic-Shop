{% set headerMenu = knp_menu_get('MenuTree', ['index', 'category']) %}
<style>
    .breadcrumb-dropdown {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        /* Dodaj inne style wed≈Çug potrzeb */
    }

    .breadcrumb-dropdown a {
        color: #495057;
        padding: 8px 16px;
        text-decoration: none;
        display: block;
    }

    .breadcrumb-dropdown a:hover {
        background-color: #e9ecef;
    }

    .breadcrumb-dropdown li {
        list-style-type: none;
        padding-left: 0;
    }
    
    .breadcrumb-dropdown ul {
        padding-left: 0; 
    }

</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <a class="navbar-brand px-5" href="/">ChicChic Shop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <div class= 'me-auto d-flex'>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Products
                    </a>
                    <div class="dropdown-menu breadcrumb-dropdown" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('app_products_index') }}">All Products</a>
                        {{ knp_menu_render(headerMenu,{'depth': 2}) }}
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_contact_index') }}">Contact</a>
                </li>
            </ul>
            {% set currentPath = app.request.attributes.get('_route') %}
            {% set slug = app.request.get('slug') %}

            <form id="search-form" data-search-url="{{ path('app_products_search', {'slug': 'value', 'page': 1}) }}" method="GET" class="d-flex align-items-center">
                <input type="text" name="search" class="form-control me-2" placeholder="Search products..." value="{% if slug is defined and slug != ' ' %}{{ slug }}{% endif %}">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
        <div class='ms-auto me-5'> 
            {% if app.user %}
                <span style="color:green; margin-right: 10px;">{{ app.user.email }}</span>
                <a href="{{ path('app_logout') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0v-2z"/>
                        <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
                    </svg>
                </a>
                
            {% else %}
                <a href="{{ path('app_login') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
                        <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                    </svg>
                </a>
            {% endif %}
        </div>
    </div>
    
</nav>
<script>
    {# This script must be embedded to prevent caching #}
    document.addEventListener('DOMContentLoaded', function() {
        const searchForm = document.querySelector('#search-form');
        const searchInput = document.querySelector('input[name="search"]');

        searchForm.addEventListener('submit', function(event) {
            event.preventDefault();
            let searchTerm = searchInput.value.trim().replace(/[^a-zA-Z0-9]/g, '').toLowerCase();
            const page = 1;

            if(searchTerm.length === 0)  {
                searchTerm = ' ';
            }
        
            window.location.href = `/products/search/${encodeURIComponent(searchTerm)}/${page}`;
        });
    });
</script>