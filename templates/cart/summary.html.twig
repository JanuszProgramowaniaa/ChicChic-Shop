            <section class="p-4 d-flex justify-content-center w-100 section-demo">
            
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="fw-normal mb-0 text-black headers">Order Summary</h1>
                    </div>
                    <section>
                        <div class="row">
                            <div class="col-12">
                                <div class="card mb-4">
                                    <div class="card-header py-3">
                                        <h5 class="mb-0">Order Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-4">
                                            <div class="col">
                                                <p class="lead fw-normal mb-2">Product 1</p>
                                            </div>
                                            <div class="col">
                                                <p class="lead fw-normal mb-2 text-end">Quantity: 2</p>
                                            </div>
                                            <div class="col">
                                                <p class="lead fw-normal mb-2 text-end">Price: $20.00</p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col">
                                                <p class="lead fw-normal mb-2">Product 2</p>
                                            </div>
                                            <div class="col">
                                                <p class="lead fw-normal mb-2 text-end">Quantity: 1</p>
                                            </div>
                                            <div class="col">
                                                <p class="lead fw-normal mb-2 text-end">Price: $15.00</p>
                                            </div>
                                        </div>
                                        <div class="card mb-4">
                                            <div class="card-body p-4 row align-items-center">
                                                <h3 class='d-flex justify-content-end gap-2 mt-4'>Total: $55.00</h3>
                                            </div>
                                        </div>
                                        <div class="card mb-4">
                                            <div class="card-header py-3">
                                                <h5 class="mb-0">Delivery Address</h5>
                                            </div>
                                            <div class="card-body">
                                                <p class="lead fw-normal mb-2">John Doe</p>
