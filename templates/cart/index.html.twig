{% extends 'layout/base.html.twig' %}

{% block title %}{{ 'Cart'|trans }}{% endblock %}

{% block content %}    
    <section class="h-100" style="background-color: #eee;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div id="cartContent" class="col-10">

                    {% if app.user %}
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                        </div>

                        {% if cart is defined and cart.ShoppingCartEntry is not empty %}
                            {% for entry in cart.ShoppingCartEntry %}
                                <div class="card rounded-3 mb-4">
                                    <div class="card-body p-4">
                                        <div class="row d-flex justify-content-between align-items-center productCart">
                                            <div class="col-md-2 col-lg-2 col-xl-2">
                                                <img src="{{ asset('images/products/' ~ entry.product.id ~ '.png') }}" alt="{{ entry.product.name }}" class="img-fluid rounded-3" alt="Cotton T-shirt">
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-3">
                                                <p class="lead fw-normal mb-2">{{ entry.product.name|length > 24 ? entry.product.name|slice(0, 24) ~ 'â€¦' : entry.product.name }}</p>
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                <button class="btn btn-link px-2" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                                <input id="form1" min="0" name="quantity" value="{{ entry.quantity }}" type="number" class="form-control form-control-sm" />
                                                <button class="btn btn-link px-2" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
                                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                <h5 class="mb-0">{{ entry.product.getPrice }} PLN</h5>
                                            </div>
                                            <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                               <button type="button" class="btn btn-outline-danger removeProductInCartBtn" data-idproduct="{{entry.product.id}}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"></path>
                                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"></path>
                                                    </svg>
                                                    
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                            <div class="card mb-4">
                                <div class="card-body p-4 row align-items-center">
                                    <div class="col-9">
                                        <div class="form-outline">
                                            <input type="text" id="form1" placeholder="Discount code" class="form-control form-control-lg" />
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <button type="button" class="btn btn-outline-warning btn-lg w-100 m-0 align-self-start" onclick='alert("In production")'>Apply</button>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body d-flex justify-content-end">
                                    <button type="button" class="btn btn-primary btn-block btn-lg" onclick='alert("In production")'>Delivery details</button>
                                </div>
                            </div>
                        {% else %}
                            <h1>No products in cart</h1>
                        {% endif %}
                    {% else %}
                        <div>
                            <h1>
                                The cart is only available to logged in users.
                            </h1> <br/>
                            <span class=" text-center"> Already have an account? <a href="{{ path('app_login') }}">Log in!</a></span> <br/> <br/>
                            <span class=" text-center">Don't have an account? <a href="{{ path('app_register') }}">Sign up!</a></span>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </section>

   
{% endblock %}