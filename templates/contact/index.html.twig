{% extends 'layout/index.html.twig' %}

{% block title %}Chick Chick Shop - Contact{% endblock %}


{% block content %}
  
  
        <h1 class='d-flex justify-content-center'>Contact Us</h1>
        <div class="row">
            <div class="col-md-12">
                <p class='d-flex justify-content-center'>Have questions or feedback? Reach out to us using the form or contact information below.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h3>Contact Form</h3>
                {{ form_start(contact_form, {'attr': {'class': 'form-group'}}) }}
                    <div class="mb-3">
                        {{ form_row(contact_form.email, {'attr': {'class': 'form-control'}}) }}
                        {% for error in contact_form.email.vars.errors %}
                            <small class="text-danger">{{ error.message }}</small>
                        {% endfor %}
                    </div>
                    <div class="mb-3">
                        {{ form_row(contact_form.message, {'attr': {'class': 'form-control'}}) }}
                        {% for error in contact_form.message.vars.errors %}
                            <small class="text-danger">{{ error.message }}</small>
                        {% endfor %}
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                {{ form_end(contact_form) }}
            </div>
            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2468.607579256235!2d19.452144126922594!3d51.77678079098825!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471bcada0d828c1b%3A0x4bf673f269f2f345!2zUGxhYyBXb2xub8WbY2ksIDkxLTQxNSDFgcOzZMW6!5e0!3m2!1spl!2spl!4v1699829583740!5m2!1spl!2spl" width="800" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        
        
    
{% endblock %}
