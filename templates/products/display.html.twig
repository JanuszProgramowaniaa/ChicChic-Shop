{% extends 'layout/index.html.twig' %}
{% block content %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Product Information</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="{{ asset('images/products/' ~ product.id ~ '.jpg') }}" alt="{{ product.name }}" class="img-fluid" />
            </div>
            <div class="col-md-8">
                <h3>{{ product.name }}</h3>
                {% set formatted_price = product.price|format_currency('PLN') %}
                {% set currency_symbol = 'PLN' %}
                {% set price_value = formatted_price|replace({'PLN': ''})|trim %}
                <p class="lead">Price: {{ price_value }} {{ currency_symbol }}</p>
                <p>{{ product.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}