<a class="product-link" href='{{ path('app_products_display', {'productId': product.id}) }}'>
    <div class="card mb-4 shadow-sm product-card">
        <div class="card-body text-center product-body">
            <h3 class="product-title">
                {% if product.isbestseller == true %}
                    <div class="badge bestseller-badge">Bestseller</div>
                {% endif %}
                {% if product.dateadded >= (date('now')|date_modify('-1 month')) %}
                    <div class="badge latest-badge">Latest</div>
                {% endif %}
                {% if product.name|length > 25 %}
                    {{ product.name|slice(0, 25) }}...
                {% else %}
                    {{ product.name|capitalize }}
                {% endif %}
            </h3>
            <small class="symbol-text">Symbol: {{ product.symbol }} </small>
            <img src="{{ asset('images/products/' ~ product.id ~ '.png') }}" alt="{{ product.name }}" class="product-image" />
            {% set formatted_price = product.price|format_currency('PLN') %}
            {% set currency_symbol = 'PLN' %}
            {% set price_value = formatted_price|replace({'PLN': ''})|trim %}

            <p class="product-price">Price: <span class="price-value">{{ price_value }} {{ currency_symbol }}</span></p>
        </div>
    </div>
</a>