<a style="text-decoration: none;" href='{{ path('app_products_display', {'productId': product.id}) }}'>
    <div class="card mb-4 shadow-sm">
        <div class="card-body text-center">
           {% if product.isbestseller == true %}
                <div style="font-size:10px;background-color: #3498db; color: white; padding: 3px 10px; border-radius: 3px; position: absolute; top: 0; left: 0; width: 25%; margin: 5px;">Bestseller</div>
            {% endif %}
            <h3 style="margin-top: 10px;">
                {% if product.name|length > 25 %}
                    {{ product.name|slice(0, 25) }}...
                {% else %}
                    {{ product.name|capitalize }}
                {% endif %}
            </h3>
            <img src="{{ asset('images/products/' ~ product.id ~ '.png') }}" alt="{{ product.name }}" width="200" height="200" class="mx-auto d-block" />
            {% set formatted_price = product.price|format_currency('PLN') %}
            {% set currency_symbol = 'PLN' %}
            {% set price_value = formatted_price|replace({'PLN': ''})|trim %}

            <p>Price: <span style="color:blue">{{ price_value }} {{ currency_symbol }}</span></p>
        </div>
    </div>
</a>